        <artifactId>plugin</artifactId>
        <version>1.1</version>
        <relativePath>../../../../</relativePath>
    </parent>

    <artifactId>search-api</artifactId>
    <name>Apromore Search API</name>
    <description>API for Search Plugins</description>

    <properties>
        <maven-checkstyle-plugin.configLocation>../../../../../Extras/code-analysis/checkstyle.xml</maven-checkstyle-plugin.configLocation>
