    <modules>
        <!-- Archetypes for new Plugin projects -->
        <module>plugin-core/plugin-archetype</module>
        <module>plugin-core/plugin-api-archetype</module>
        <module>plugin-core/plugin-api-provider-archetype</module>
        
        <!-- Database Support Plugins -->
        <module>plugin-database/database-mysql</module>

        <!-- Plugin Interfaces -->
        <module>plugin-core/api</module>
        <module>plugin-core/provider</module>

        <!-- Canoniser Interface -->
        <module>plugin-canoniser/core/api</module>
        <module>plugin-canoniser/core/provider</module>

        <!-- Deployment Interface -->
        <module>plugin-deployment/deployment-api</module>
        <module>plugin-deployment/deployment-api-provider</module>

        <!-- Plugin Implementations -->
        <module>plugin-canoniser/aris</module>
        <module>plugin-canoniser/bpmn</module>
