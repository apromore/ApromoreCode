<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.apromore</groupId>
        <artifactId>apromore-parent</artifactId>
        <version>1.0</version>
    </parent>
    
    <groupId>org.apromore</groupId>
    <artifactId>cpf-schema</artifactId>
    <version>1.0</version>
    <packaging>jar</packaging>

    <url>http://apromore.org/</url>
    <name>Apromore Common CPF Generated Code</name>
    <description>Apromore is an open and extensible repository to store and disclose business process models of a
        variety of types and languages, and beyond that, to build on top of existing tools and techniques, to provide
        state-of-the-art features for model presentation, analysis, integration, contextualization, improvement, and
        re-use.
    </description>

    <scm>
        <url>http://apromore.googlecode.com/svn/trunk/Apromore-Schema/cpf-schema</url>
        <connection>scm:svn:http://apromore.googlecode.com/svn/trunk/Apromore-Schema/cpf-schema</connection>
        <developerConnection>scm:svn:https://apromore.googlecode.com/svn/trunk/Apromore-Schema/cpf-schema</developerConnection>
    </scm>

    <ciManagement>
        <system>Bamboo</system>
        <url>http://apromore-build.qut.edu.au/bamboo</url>
        <notifiers>
            <notifier>
                <address>cam.james@gmail.com</address>
            </notifier>
        </notifiers>
    </ciManagement>

    <issueManagement>
        <system>JIRA</system>
        <url>http://apromore-build.qut.edu.au/jira/browse/apromore</url>
    </issueManagement>

    <distributionManagement>
        <site>
            <id>website</id>
            <url>dav:http://apromore-build.qut.edu.au/projects/cpf-schema</url>
        </site>
    </distributionManagement>

    <licenses>
        <license>
            <name>GNU General Public License v3</name>
            <distribution>repo</distribution>
            <url>http://www.gnu.org/licenses/gpl-3.0.txt</url>
        </license>
    </licenses>

    <organization>
        <name>QUT</name>
        <url>http://www.qut.edu.au</url>
    </organization>

    <build>
        <finalName>cpf-schema</finalName>
        <plugins>
            <plugin>
                <groupId>org.jvnet.jaxb2.maven2</groupId>
                <artifactId>maven-jaxb2-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <schemaDirectory>${basedir}/src/main/resources/xsd</schemaDirectory>
                    <generateDirectory>${basedir}/target/generated-sources/src</generateDirectory>
                    <args>
                        <arg>-Xvisitor</arg>
                    </args>
                    <plugins>
                        <plugin>
                            <groupId>com.massfords</groupId>
                            <artifactId>jaxb-visitor</artifactId>
                            <version>1.9</version>
                        </plugin>
                    </plugins>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${basedir}/target/generated-sources/src</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
