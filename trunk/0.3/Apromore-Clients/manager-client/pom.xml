<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.apromore</groupId>
        <artifactId>apromore-parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <groupId>org.apromore</groupId>
    <artifactId>manager-client</artifactId>
    <packaging>jar</packaging>
    <version>1.0.0-SNAPSHOT</version>

    <url>http://code.google.com/p/apromore/</url>
    <name>Apromore Manager Client</name>
    <description>Apromore is an open and extensible repository to store and disclose business process models of a
        variety of types and languages, and beyond that, to build on top of existing tools and techniques, to provide
        state-of-the-art features for model presentation, analysis, integration, contextualization, improvement, and
        re-use.
    </description>

    <issueManagement>
        <system>Google Code</system>
        <url>http://code.google.com/p/apromore/wiki/IssueTracker</url>
    </issueManagement>

    <scm>
        <developerConnection>scm:svn:http://apromore.googlecode.com/svn/trunk/0.3/Apromore-Clients/manager-client/</developerConnection>
        <connection>scm:svn:http://apromore.googlecode.com/svn/trunk/0.3/Apromore-Clients/manager-client/</connection>
        <url>http://apromore.googlecode.com/svn/trunk/0.3/Apromore-Clients/manager-client/</url>
    </scm>

    <ciManagement>
        <system>Hudson</system>
        <url>http://131.181.88.5:8080/view/apromore</url>
    </ciManagement>

    <distributionManagement>
        <site>
            <id>website</id>
            <url>dav:http://131.181.88.5:9000/projects/apromore</url>
        </site>
    </distributionManagement>

    <prerequisites>
        <maven>2.2.1</maven>
    </prerequisites>

    <inceptionYear>2010</inceptionYear>

    <licenses>
        <license>
            <name>GNU General Public License v3</name>
            <distribution>repo</distribution>
            <url>http://www.gnu.org/licenses/gpl-3.0.txt</url>
        </license>
    </licenses>

    <organization>
        <name>QUT</name>
        <url>http://www.qut.edu.au</url>
    </organization>

    <mailingLists>
        <mailingList>
            <name>Apromore Forum</name>
            <post>apromore-rm@googlegroups.com</post>
            <unsubscribe>apromore-rm+unsubscribe@googlegroups.com</unsubscribe>
        </mailingList>
    </mailingLists>

    <developers>
        <developer>
            <id>u312978</id>
            <name>Cameron James</name>
            <email>cam.james@gmail.com</email>
            <organization>Suncorp</organization>
            <organizationUrl>http://www.suncorp.com.au/</organizationUrl>
            <roles>
                <role>Active User</role>
            </roles>
            <timezone>+10</timezone>
        </developer>
    </developers>

    <dependencies>
        <!-- JAXB -->
        <dependency>
            <groupId>javax.xml.bind</groupId>
            <artifactId>jaxb-api</artifactId>
            <version>${jaxb-api.version}</version>
        </dependency>
        <dependency>
            <groupId>com.sun.xml.bind</groupId>
            <artifactId>jaxb-impl</artifactId>
            <version>${jaxb-impl.version}</version>
        </dependency>
        <dependency>
            <groupId>org.jvnet.jaxb2_commons</groupId>
            <artifactId>jaxb2-basics-runtime</artifactId>
            <version>${jaxb2-basics-runtime.version}</version>
        </dependency>
    </dependencies>

    <build>
        <finalName>manager-client</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.cxf</groupId>
                <artifactId>cxf-codegen-plugin</artifactId>
                <version>${cxf.version}</version>
                <executions>
                    <execution>
                        <id>generate-sources</id>
                        <phase>generate-sources</phase>
                        <configuration>
                            <sourceRoot>${basedir}/target/generated-sources/src</sourceRoot>
                            <wsdlOptions>
                                <wsdlOption>
                                    <wsdl>${basedir}/src/main/resources/manager.wsdl</wsdl>
                                    <extraargs>
                                        <extraarg>-client</extraarg>
                                        <extraarg>-fe</extraarg><extraarg>jaxws</extraarg>
                                        <extraarg>-db</extraarg><extraarg>jaxb</extraarg>
                                        <extraarg>-wv</extraarg><extraarg>1.1</extraarg>
                                        <extraarg>-sn</extraarg><extraarg>ManagerService</extraarg>
                                        <extraarg>-wsdlLocation</extraarg><extraarg>http://localhost:8080/Apromore/services/manager.wsdl</extraarg>
                                        <extraarg>-p</extraarg><extraarg>http://www.apromore.org/manager/service_portal=org.apromore.portal.manager</extraarg>
                                        <extraarg>-p</extraarg><extraarg>urn:qut-edu-au:schema:apromore:manager=org.apromore.model</extraarg>
                                        <extraarg>-impl</extraarg>
                                        <extraarg>-verbose</extraarg>
                                        <extraarg>-xjc-mark-generated</extraarg>
                                    </extraargs>
                                </wsdlOption>
                            </wsdlOptions>
                        </configuration>
                        <goals>
                            <goal>wsdl2java</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>${basedir}/target/generated-sources/src</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <properties>
        <!-- Cobertura -->
        <cobertura.total-branch-rate>0</cobertura.total-branch-rate>
        <cobertura.total-line-rate>0</cobertura.total-line-rate>

        <!-- Checkstyle -->
        <checkstyle.skip>true</checkstyle.skip>

        <!-- Versions -->
        <cxf.version>2.4.0</cxf.version>
        <maven-jaxb2-plugin.version>0.7.1</maven-jaxb2-plugin.version>
    </properties>

</project>