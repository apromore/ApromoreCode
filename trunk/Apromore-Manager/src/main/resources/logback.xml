<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true" scan="true" scanPeriod="30 seconds">

    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
        <resetJUL>true</resetJUL>
    </contextListener>

    <jmxConfigurator/>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-5level %logger{0} - %msg%n</pattern>
        </encoder>
    </appender>

	
    <!-- 
    	Does not work in OSGi :(
    	<include resource="logJpaToFile.xml" /> 
    -->
   <appender name="jpalogfile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${catalina.home}/logs/manager.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>${catalina.home}/logs/manager.%i.log.zip</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>3</maxIndex>
        </rollingPolicy>

        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>1MB</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>%date %level | %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.apromore" level="DEBUG">
        <appender-ref ref="jpalogfile" />
    </logger>
    <logger name="org.springframework.orm" level="WARN">
        <appender-ref ref="jpalogfile" />
    </logger>
    <logger name="org.springframework.jdbc" level="WARN">
        <appender-ref ref="jpalogfile" />
    </logger>
    <logger name="org.springframework.transaction" level="WARN">
        <appender-ref ref="jpalogfile" />
    </logger>

    <logger name="org.apromore" level="TRACE" />
    <logger name="org.springframework" level="WARN" />
    <logger name="javax.xml" level="WARN" />
    <logger name="com.sun" level="WARN" />

    <root level="INFO">
        <appender-ref ref="console"/>
    </root>

</configuration>

